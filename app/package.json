{
  "name": "running-dinner-tool",
  "author": {
    "name": "Jonathan Kloss"
  },
  "description": "Running Dinner Tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-kloss/Running-Dinner-Tool"
  },
  "version": "2.3.0",
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "@material-ui/core": "^1.4.2",
    "@material-ui/icons": "^2.0.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "concurrently": "^4.1.2",
    "electron-log": "^3.0.9",
    "electron-reload": "^1.5.0",
    "electron-updater": "^4.0.6",
    "electron-webpack": "^2.7.4",
    "eslint": "^5.16.0",
    "fast-csv": "^2.5.0",
    "lodash": "^4.17.15",
    "mapbox-gl": "^0.53.1",
    "material-ui-time-picker": "^1.3.0",
    "materialize-css": "^0.100.2",
    "moment": "^2.24.0",
    "papaparse": "^4.6.3",
    "react": "^16.12.0",
    "react-autocomplete": "1.8.1",
    "react-dom": "^16.12.0",
    "react-mapbox-gl": "^4.2.0",
    "react-redux": "^7.1.3",
    "react-scripts": "^1.1.5",
    "redux": "^4.0.1",
    "redux-persist": "^6.0.0",
    "wait-on": "^2.1.2",
    "watchify": "^3.11.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "electron": "^7.1.1",
    "electron-builder": "^20.28.5",
    "ws": "3.3.2"
  },
  "build": {
    "appId": "running.dinner.tool",
    "productName": "Running Dinner Tool",
    "publish": [
      {
        "provider": "github",
        "owner": "john-kloss",
        "repo": "Running-Dinner-Tool"
      }
    ],
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ],
      "icon": "assets/dinner.ico"
    },
    "mac": {
      "target": "default",
      "icon": "assets/dinner.icns"
    },
    "linux": {
      "target": "AppImage",
      "publish": [
        "github"
      ],
      "icon": "assets/dinner.png"
    }
  },
  "scripts": {
    "watch": "watchify src/index.js -t babelify -o src/js/bundle.js --debug --verbose",
    "react-start": "react-scripts start ./src",
    "react-build": "react-scripts build",
    "publish": " electron-builder -wl -p always",
    "mac": "electron-builder --mac",
    "win": "electron-builder --win",
    "linux": "electron-builder --linux",
    "build": "npm run react-build && electron-builder -wl -p always"
  }
}
